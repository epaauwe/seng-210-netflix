<Window x:Class="NetflixRec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetflixRec"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid Name="HomePage">
        <Button x:Name="SignIn" Visibility="Visible" Content="Sign In" HorizontalAlignment="Left" Margin="993,30,0,0" VerticalAlignment="Top" Width="75" BorderBrush="Black" Background="White" Click="SignIn_Click"/>
        <Button x:Name="SignOut" Content="Sign Out" Visibility="Hidden" HorizontalAlignment="Left" Margin="993,30,0,0" VerticalAlignment="Top" Width="75" BorderBrush="Black" Background="White" Click="SignOut_Click"/>
        <Button x:Name="CreateUser" Visibility="Visible" Content="CreateUser" HorizontalAlignment="Left" Margin="1088,30,0,0" VerticalAlignment="Top" Width="75" BorderBrush="Black" Background="White" Click="CreateUser_Click"/>

        <Rectangle Visibility="Hidden" x:Name="LoginBorder" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="253" Margin="350,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="510"/>
        <Grid Name ="LoginPage" Visibility="Hidden" HorizontalAlignment="Left" Height="236" Margin="350,250,0,0" VerticalAlignment="Top" Width="493">
            <Label x:Name="UserNameLabel" Content="Username" HorizontalAlignment="Left" Margin="24,49,0,0" VerticalAlignment="Top" Width="94"/>
            <TextBox x:Name="UserNameBox" HorizontalAlignment="Left" Height="23" Margin="24,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="422" Foreground="#FFAAA5A5" Text="Insert Username Here" GotFocus="UserNameBox_GotFocus" LostFocus="UserNameBox_LostFocus"/>
            <TextBox x:Name="PassWordBox" HorizontalAlignment="Left" Height="23" Margin="24,139,0,0" TextWrapping="Wrap" Text="Insert Password Here" VerticalAlignment="Top" Width="422" Foreground="#FFAAA5A5" LostFocus="PassWordBox_LostFocus" GotFocus="PassWordBox_GotFocus"/>
            <Label x:Name="PassWordLabel" Content="Password" HorizontalAlignment="Left" Margin="24,108,0,0" VerticalAlignment="Top" Width="94"/>
            <Label x:Name="Login" Content="Login" HorizontalAlignment="Left" Margin="161,10,0,0" VerticalAlignment="Top" Height="60" Width="88" FontSize="24"/>
            <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="371,206,0,0" VerticalAlignment="Top" Width="75" BorderBrush="Black" Background="{x:Null}" Click="LoginButton_Click"/>
        </Grid>

        <Rectangle Visibility="Hidden" x:Name="CreateUserFormBorder" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="350
                   " Margin="350,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="510"/>
        <Grid Name="CreateUserForm" Visibility="Hidden" HorizontalAlignment="Left" Height="350
              " Margin="350,250,0,0" VerticalAlignment="Top" Width="510">
            <Label x:Name="FirstName" Content="First Name" HorizontalAlignment="Left" Margin="34,60,0,0" VerticalAlignment="Top"/>
            <Label Content="Create User" HorizontalAlignment="Left" Margin="160,10,0,0" VerticalAlignment="Top" Height="39" Width="166" FontSize="24"/>
            <TextBox x:Name="FirstNameCreatedForm" HorizontalAlignment="Left" Height="23" Margin="34,91,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Width="410" Foreground="#FF8B8686" GotFocus="FirstNameCreatedForm_GotFocus" LostFocus="FirstNameCreatedForm_LostFocus"/>
            <Label x:Name="LastName" Content="Last Name" HorizontalAlignment="Left" Margin="34,123,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="LastNameCreatedForm" HorizontalAlignment="Left" Height="23" Margin="34,154,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Width="410" Foreground="#FF8B8686" GotFocus="LastNameCreatedForm_GotFocus" LostFocus="LastNameCreatedForm_LostFocus"/>
            <Label x:Name="UsernameCreate" Content="Username" HorizontalAlignment="Left" Margin="34,182,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="UserNameCreatedForm" HorizontalAlignment="Left" Height="23" Margin="34,213,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="410" Foreground="#FF8B8686" GotFocus="UserNameCreatedForm_GotFocus" LostFocus="UserNameCreatedForm_LostFocus"/>
            <Label x:Name="PasswordCreate" Content="Password" HorizontalAlignment="Left" Margin="34,243,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="PasswordCreatedForm" HorizontalAlignment="Left" Height="23" Margin="34,274,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="410" Foreground="#FF8B8686" GotFocus="PasswordCreatedForm_GotFocus" LostFocus="PasswordCreatedForm_LostFocus"/>
            <Button x:Name="CreateUserButton_onForm" Content="Create User" HorizontalAlignment="Left" Margin="369,320,0,0" VerticalAlignment="Top" Width="75" Click="CreateUserButton_onForm_Click"/>
        </Grid>
        <Label Content="Netflix" HorizontalAlignment="Left" Margin="450,10,0,0" VerticalAlignment="Top" Height="65" Width="177" FontSize="48"/>


    </Grid>
</Window>
